<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center my-3">
                <div class="card-body">
                    <h3>En Inicio</b></h3>
                </div>
            </div>  
        </div>
    </div>
    <div class="row">
        <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">ITESM</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                    <a href="/" class="nav-link">Inicio</a>
                    </li>

                    <li class="nav-item">
                    <a href="/episodes" class="nav-link">Episodios</a>
                    </li>

                    <li class="nav-item">
                    <a href="/locations" class="nav-link">Ubicaciones</a>
                    </li>

                    {{#if user}}
                    <li class="nav-item">
                    <a href="/profile" class="nav-link">Perfil</a>
                    </li>

                    <li class="nav-item">
                    <a href="/logout" class="nav-link">Cerrar Sesión</a>
                    </li>
                    {{else}}
                    <li class="nav-item">
                    <a href="/signin" class="nav-link">Inicia Sesión</a>
                    </li>

                    <li class="nav-item">
                    <a href="/signup" class="nav-link">Regístrate</a>
                    </li>
                    {{/if}}                    
                </ul>
            </div>
        </div>
        </nav>
    </div>

      <div class="row">
        {{#if error}}
            <p>Error: {{error}}</p>
        {{/if}}

        {{#each data}}
            <div class="col-md-3">
                <div class="card" style="margin: 10px;">
                    <img class="card-img-top" src={{image}}>
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{type}}</p>
                        <a href={{url}} class="btn btn-primary">Go</a>
                    </div>
                </div>
            </div>
        {{/each}}

      </div>

    </div>
</div>